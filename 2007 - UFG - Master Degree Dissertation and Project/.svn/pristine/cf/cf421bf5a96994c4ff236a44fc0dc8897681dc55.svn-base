\begin{frame}[allowframebreaks]
		\frametitle{Plataforma Distribuída (Uma \alert{\textbf{Opção}} Inteligente)}
		
		
		\begin{block}{Controle de acesso gerenciado por grupos}
				\begin{enumerate}
						\item \alert{\textbf{Administradores}}
						\\ Grupo de usuários com acesso privilegiado responsável pela gerência e manutenção da plataforma distribuída.
						\item \alert{\textbf{Usuários}}
						\\ Grupo de usuários ordinários com acesso restrito á plataforma distribuída.
				\end{enumerate}			
		\end{block}
		
		\newpage		
		\begin{itemize}
			\item Facilita \alert{gerência} dos dispositivos móveis por \textbf{terceiros}.
			\item Permite maior \alert{integração} entre os dispositivos móveis.
			\item Permite que o \alert{Administrador} envie notificações importantes aos usuários.
			\item Permite que o \alert{Administrador} insira uma nova política de segurança de forma autoritária, evitando ataques do tipo \textbf{0-day (Zero Day)}.								
			\item Permite que o usuário \textbf{troque de dispositivo} e mantenha as mesmas preferências e políticas de segurança.			
		\end{itemize}
		
\end{frame}


